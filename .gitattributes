# Default: detect text files and normalize
* text=auto

# Force LF for Flutter/Dart source files
*.dart    text eol=lf
*.yaml    text eol=lf
*.yml     text eol=lf
*.md      text eol=lf
*.json    text eol=lf
*.xml     text eol=lf
*.html    text eol=lf
*.css     text eol=lf
*.sh      text eol=lf
*.gradle  text eol=lf
*.properties text eol=lf

# Binary files  leave untouched
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.jar     binary
*.so      binary
*.exe     binary
